@page
@model PlancherExpert.Pages.LoginModel
@{
	ViewData["title"] = "Login";
}

<section class="auth">
	<div class="auth-container">
		<h2 class="mb-4 text-center">Login</h2>
		@if (HttpContext.Session.GetString("userNotExist") != null)
		{
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<small>@HttpContext.Session.GetString("userNotExist")</small>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </button>
			</div>
		}
		@if (HttpContext.Session.GetString("userPasswordError") != null)
		{
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<small>@HttpContext.Session.GetString("userPasswordError")</small>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </button>
			</div>
		}
		<form method="post">
			<!-- Username input -->
			<div class="mb-4">
				<label class="form-label" for="username">Username</label>
				<input type="text" id="username" name="username" class="form-control" value="@Model.User.Username" />
			</div>

			<!-- Password input -->
			<div class="mb-4">
				<label class="form-label" for="password">Password</label>
				<input type="password" id="password" name="password" class="form-control" value="@Model.User.Password" />
			</div>

			<!-- Submit button -->
			<button type="submit" class="btn btn-primary mb-4">Sign in</button>

			<!-- Register buttons -->
			<div class="text-center">
				<p>Don't have an account? <a asp-area="" asp-page="/register">Register</a></p>
			</div>
		</form>
	</div>
</section>
